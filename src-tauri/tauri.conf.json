{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "YouTube Downloader",
  "version": "0.2.4",
  "identifier": "com.youtube-downloader",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "YouTube Downloader",
        "width": 1200,
        "height": 900,
        "minWidth": 800,
        "minHeight": 700,
        "resizable": true,
        "fullscreen": false,
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {},
  "bundle": {
    "active": true,
    "targets": ["app", "dmg"],
    "icon": ["icons/icon.icns", "icons/icon.png"],
    "resources": ["binaries/yt-dlp", "binaries/deno"],
    "macOS": {
      "dmg": {
        "background": "icons/dmg-background.png",
        "appPosition": {
          "x": 200,
          "y": 200
        },
        "applicationFolderPosition": {
          "x": 500,
          "y": 200
        },
        "windowSize": {
          "width": 700,
          "height": 450
        }
      }
    }
  }
}
